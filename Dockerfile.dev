FROM node:20-alpine

WORKDIR /app

# Copiar archivos de configuración
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./

# Instalar dependencias
RUN npm ci

# Copiar código fuente
COPY src/ ./src/
COPY test/ ./test/

# Exponer puerto
EXPOSE 3000

# Comando para desarrollo
CMD ["npm", "run", "start:dev"]